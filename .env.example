# ===========================================
# IRT CAT Engine - Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values

# ---------------------------------------------
# CORS Configuration
# ---------------------------------------------
# Comma-separated list of allowed origins for CORS
# For development, include http://localhost:5173
# For production, use your actual frontend domain
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:8000,https://vocab-cat-test.vercel.app

# ---------------------------------------------
# Database Configuration
# ---------------------------------------------
# Development: SQLite (file-based)
DATABASE_URL=sqlite:///./irt_cat_engine/db/irt_cat.db

# Production: PostgreSQL (recommended for Cloud Run, Kubernetes)
# DATABASE_URL=postgresql://user:password@localhost:5432/vocab_cat

# ---------------------------------------------
# Data File Paths
# ---------------------------------------------
# Path to vocabulary CSV file (9,183 words)
VOCAB_DATA_PATH=./9000word_full_db.csv

# Path to vocabulary graph JSON (48MB, optional)
GRAPH_DATA_PATH=./vocabulary_graph.json

# ---------------------------------------------
# API Configuration
# ---------------------------------------------
# Port for the API server
PORT=8000

# API Base URL (for frontend configuration)
API_BASE_URL=http://localhost:8000/api/v1

# ---------------------------------------------
# Logging Configuration
# ---------------------------------------------
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path (leave empty to disable file logging)
LOG_FILE_PATH=./logs/app.log

# ---------------------------------------------
# Session Management
# ---------------------------------------------
# Session timeout in seconds (default: 1 hour)
SESSION_TIMEOUT=3600

# Redis URL for distributed session management (optional, for production)
# REDIS_URL=redis://localhost:6379/0

# ---------------------------------------------
# Rate Limiting (optional)
# ---------------------------------------------
# Enable rate limiting (true/false)
ENABLE_RATE_LIMITING=false

# Rate limit: requests per minute
RATE_LIMIT=60

# ---------------------------------------------
# Monitoring & Observability (optional)
# ---------------------------------------------
# Sentry DSN for error tracking
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Enable Prometheus metrics endpoint (true/false)
# ENABLE_METRICS=true
